@model MagazynApp.Models.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}
<head>
    <meta name="viewport" content="width=device-width" />
    @*<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>*@
</head>

<hr />


<body>
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Dodaj nowy produkt</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form asp-action="Create">
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Nazwa</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quantity" class="control-label">Ilość</label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label">Cena</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="=form-group">
                    <label for="TypeId">Wybierz rodzaj produktu:</label>
                    <select name="TypeId" id="TypeId" class="form-control select2" style="width: 100%; ">
                        @foreach (var t in ViewData["productTypes"] as IList<ProductType>)
                        {
                            <option value="@t.Id">@t.Name</option>
                        }
                    </select>
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>

    <div>
        <a asp-action="Index">Wróć do listy produktów</a>
    </div>
</body>


