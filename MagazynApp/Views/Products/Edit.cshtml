@model MagazynApp.Models.Product

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}
<head>
    <meta name="viewport" content="width=device-width" />
</head>

<body>
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Edytuj produkt</h3>
        </div>
        <form asp-action="Edit">
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Nazwa</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quantity" class="control-label">Ilość</label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label">Cena</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="=form-group">
                    <label for="TypeId">Wybierz rodzaj produktu:</label>
                    <select name="TypeId" id="TypeId" class="form-control select2" style="width: 100%; ">
                        @foreach (var t in ViewData["productTypes"] as IList<ProductType>)
                        {
                            @if (Model.TypeId == t.Id)
                            {
                                <option value="@t.Id" selected>@t.Name</option>
                            }
                            else
                            {
                                <option value="@t.Id">@t.Name</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>

    <div>
        <a asp-action="Index">Wróć do listy produktów</a>
    </div>
</body>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/validationlocalization.js"></script>
}
